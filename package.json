{
  "name": "saif-aljanahi-portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "npm run seo:generate && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "preview:local": "./scripts/preview.sh",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e",
    "build:production": "npm run build",
    "build:ci": "npm install --legacy-peer-deps && npm run build",
    "deploy:preview": "npm run build:production && echo 'Build complete! Upload dist/ folder to Cloudflare Pages'",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "mcp:frontend": "node mcp-frontend-server.js",
    "verify:images": "node scripts/verify-blog-images.cjs",
    "algolia:index": "node scripts/algolia-index-proper.cjs",
    "seo:sitemap": "node scripts/generate-sitemap.cjs",
    "seo:rss": "node scripts/generate-rss.cjs",
    "seo:generate": "npm run seo:sitemap && npm run seo:rss",
    "seo:all": "npm run seo:generate && npm run algolia:index"
  },
  "dependencies": {
    "@giscus/react": "^3.1.0",
    "@microsoft/clarity": "^1.0.0",
    "@types/algoliasearch": "^3.34.11",
    "@types/uuid": "^10.0.0",
    "algoliasearch": "^5.35.0",
    "firebase": "^11.9.1",
    "framer-motion": "^12.19.1",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.4",
    "react-instantsearch-dom": "^6.40.4",
    "react-router-dom": "^6.26.1",
    "shiki": "^3.6.0",
    "uuid": "^11.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@eslint/js": "^9.9.1",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@modelcontextprotocol/server-filesystem": "^2025.8.21",
    "@modelcontextprotocol/server-sequential-thinking": "^2025.7.1",
    "@playwright/mcp": "^0.0.34",
    "@playwright/test": "^1.53.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-legacy": "^6.1.1",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^3.2.3",
    "autoprefixer": "^10.4.18",
    "esbuild": "^0.25.5",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.35",
    "puppeteer-mcp-claude": "^0.1.7",
    "tailwindcss": "^3.4.1",
    "terser": "^5.42.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-plugin-pwa": "^1.0.0",
    "vitest": "^3.2.3",
    "workbox-window": "^7.3.0"
