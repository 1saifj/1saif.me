# JavaScript & CSS
/*.js
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/javascript; charset=utf-8
  Cross-Origin-Resource-Policy: cross-origin

/*.css
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: text/css; charset=utf-8
  Cross-Origin-Resource-Policy: cross-origin

# Manifest & Service Worker
/manifest.json
  Cache-Control: public, max-age=86400
  Content-Type: application/manifest+json

/sw.js
  Cache-Control: public, max-age=0, must-revalidate
  Content-Type: application/javascript; charset=utf-8
  Service-Worker-Allowed: /

# SEO Files
/sitemap.xml
  Cache-Control: public, max-age=86400
  Content-Type: application/xml; charset=utf-8

/robots.txt
  Cache-Control: public, max-age=86400
  Content-Type: text/plain; charset=utf-8

/rss.xml
  Cache-Control: public, max-age=3600
  Content-Type: application/rss+xml; charset=utf-8

/atom.xml
  Cache-Control: public, max-age=3600
  Content-Type: application/atom+xml; charset=utf-8

/feed.json
  Cache-Control: public, max-age=3600
  Content-Type: application/json; charset=utf-8

# PDF Resume
/*.pdf
  Cache-Control: public, max-age=86400
  Content-Type: application/pdf
  Cross-Origin-Resource-Policy: cross-origin

# Blog posts - optimize for social sharing
/blog/*
  Cache-Control: public, max-age=3600, must-revalidate
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  # Allow embedding in social media iframes
  Content-Security-Policy: default-src 'self'; frame-ancestors 'self' https://t.me https://telegram.org https://facebook.com https://twitter.com https://linkedin.com
